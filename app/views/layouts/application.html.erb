<!DOCTYPE html>
<html>
  <head>
    <title><%= app_name %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <%= stylesheet_link_tag    'application', href: 'https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= yield :page_css %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield :page_js %>
  </head>
  <body id="page-top" class="<%= yield :page_class %>">
    <% if user_signed_in? %>
    <div id="wrapper">
      <%= render "layouts/sidebar" %>
      <div class="d-flex flex-column" id="content-wrapper">
        <div id="content">
          <%= render "layouts/top_nav" %>
          <div class="container-fluid">
            <%= yield %>
          </div>
        </div>
        <%= render "layouts/footer" %>
      </div>
      <a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
    </div>
    <% else %>
      <%= yield %>
    <% end -%>
  </body>
</html>