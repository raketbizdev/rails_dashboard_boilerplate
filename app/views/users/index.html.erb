<h3 class="h3 mb-2 text-gray-800"><%= controller.controller_name.titleize %></h3>
<%= bootstrap_flash %>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="d-sm-flex justify-content-between align-items-center">
      <h6 class="m-0 font-weight-bold text-primary"><%= controller.controller_name.singularize.titleize %> Lists</h6>
      <%= link_to "Add #{controller.controller_name.singularize.titleize}", new_users_admin_path, class: "btn btn-primary btn-sm d-none d-sm-inline-block" %>
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-sm" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Phone</th>
        
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.profile.my_full_name %><br>
                <small class="font-weight-light">
                  <%= link_to 'View', users_admin_index_path %>
                  <%= link_to 'Edit', edit_users_admin_path(user) %>
                  <%= link_to 'Delete', users_admin_index_path, method: :delete, data: { confirm: 'Are you sure?' } %>
                </small>
              </td>
              <td><%= user.email %></td>
              <td><%= user.roles.name %></td>
              <td><%= user.profile.mobile_phone %></td>
             
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>